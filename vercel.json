{
  "version": 2,
  "buildCommand": "pnpm build",
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node",
      "config": { "zeroConfig": true }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/index.ts" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
